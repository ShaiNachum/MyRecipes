<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myrecipes.UI_Controllers.RecipeActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recipe_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/recipe_TXT_recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="30sp"
        android:text="Recipe Name"
        android:textStyle="italic"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recipe_IMG_dishPhoto"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/recipe_TXT_recipeName"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_menu_add"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/recipe_TXT_dishDescription"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_below="@+id/recipe_IMG_dishPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:isScrollContainer="true"
        android:inputType="textMultiLine"
        android:text="Recipe Description"
        android:textStyle="italic"
        android:textSize="25sp"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recipe_IMG_back"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/recipe_TXT_dishDescription"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_back"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recipe_IMG_addFavorite"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/recipe_TXT_dishDescription"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_add_favorite"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/recipe_IMG_removeFavorite"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/recipe_TXT_dishDescription"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_remove_favorite"
        />
</RelativeLayout>