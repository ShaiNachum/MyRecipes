<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myrecipes.UI_Controllers.LogInActivity">

  <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/login_IMG_background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/login_LBL_addRecipe"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="50dp"
      android:text="Add Recipe"
      android:textSize="30sp"
      android:textStyle="italic"
      />

  <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/login_IMG_addRecipe"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="15dp"
      app:srcCompat="@drawable/ic_add_recipe"
      android:layout_below="@id/login_LBL_addRecipe"
      />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/login_LBL_allRecipes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="30dp"
      android:layout_below="@id/login_IMG_addRecipe"
      android:text="All Recipes"
      android:textSize="30sp"
      android:textStyle="italic"
      />

  <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/login_IMG_allRecipes"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="15dp"
      android:layout_below="@id/login_LBL_allRecipes"
      app:srcCompat="@drawable/ic_logo"
      />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/login_LBL_favorites"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="30dp"
      android:layout_below="@id/login_IMG_allRecipes"
      android:text="Favorites"
      android:textSize="30sp"
      android:textStyle="italic"
      />

  <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/login_IMG_favorites"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="15dp"
      android:layout_below="@id/login_LBL_favorites"
      app:srcCompat="@drawable/ic_favorites" />

  <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/login_IMG_logOut"
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="100dp"
      android:layout_below="@id/login_IMG_favorites"
      app:srcCompat="@drawable/ic_logout"
      />

</RelativeLayout>